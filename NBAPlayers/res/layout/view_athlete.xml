<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_jerseyNumber"
        android:layout_below="@+id/view_jerseyNumber"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view_jerseyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_name"
        android:layout_below="@+id/view_name"
        android:layout_marginTop="16dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view_height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_team"
        android:layout_below="@+id/view_team"
        android:layout_marginTop="25dp"
        android:text="Height: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_height_label"
        android:layout_below="@+id/view_height_label"
        android:layout_marginTop="5dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_height"
        android:layout_below="@+id/view_height"
        android:layout_marginTop="15dp"
        android:text="Weight: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_weight_label"
        android:layout_below="@+id/view_weight_label"
        android:layout_marginTop="5dp"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/view_button_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_weight"
        android:layout_marginTop="35dp" >

        <Button
            android:id="@+id/view_edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/AppBaseTheme"
            android:text="Edit" />

        <Button
            android:id="@+id/view_delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/AppBaseTheme"
            android:text="Delete" />
    </LinearLayout>

</RelativeLayout>