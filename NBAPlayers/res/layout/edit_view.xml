<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/firstName_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Display Name" />

    <EditText
        android:id="@+id/edit_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstName_label"
        android:layout_below="@+id/firstName_label"
        android:ems="10"
        android:inputType="textCapWords" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/team_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_displayName"
        android:layout_below="@+id/edit_displayName"
        android:layout_marginTop="10dp"
        android:text="Team" />

    <EditText
        android:id="@+id/edit_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/team_label"
        android:layout_below="@+id/team_label"
        android:ems="10"
        android:inputType="textCapWords" />
	
    <TextView
        android:id="@+id/jerseyNumber_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_team"
        android:layout_below="@+id/edit_team"
        android:layout_marginTop="10dp"
        android:text="Jersey Number" />

    <EditText
        android:id="@+id/edit_jerseyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jerseyNumber_label"
        android:layout_below="@+id/jerseyNumber_label"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_jerseyNumber"
        android:layout_below="@+id/edit_jerseyNumber"
        android:layout_marginTop="10dp"
        android:text="Height" />

    <EditText
        android:id="@+id/edit_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/height_label"
        android:layout_below="@+id/height_label"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_height"
        android:layout_below="@+id/edit_height"
        android:layout_marginTop="10dp"
        android:text="Weight" />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weight_label"
        android:layout_below="@+id/weight_label"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/edit_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Save" />

</RelativeLayout>
